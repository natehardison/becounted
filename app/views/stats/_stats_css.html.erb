<style type="text/css">
    /* By Michael Huang */
    /* Stats Page */
    
    .stats_table {
        border-collapse: collapse;
    }
    .stats_table td, .stats_table th {
        border: 1px solid #eee;
        padding: .25em .5em;
    }
    .stats_table th { 
        font-size:10px;
        font-weight:bold; 
        color:#a2a2a2;
        border-left:solid 1px #a2a2a2; 
        background-color:#f0f0f0;
    }  
    .stats_table tr.absentee td, .stats_table tr.in_person td{
        background: #f0f0f0;
        font-size:80%;
    }
    .stats_table td.indent {
        text-indent: 1em; 
    }
    .stats_table th.bc_clickable a {
        color: #6277A2;
        display: block;
        width: 100%;
        height: 100%;
        padding: .25em .5em;
    }
    .stats_table th.bc_clickable {
        background-image:url("<%= image_path('greyrepeater2.jpg') %>");
        background-repeat:repeat-x;
        padding:0;
    }
    .stats_table th.current
    { 
        background: #6277A2 url("<%= image_path('bluerepeater2.jpg') %>") repeat-x;
        color:#FFFFFF;
        border-left:solid 1px #2f477a;
    }
    .stats_table th.current a {
        color:#fff;
    }
    .stats_table tr td:first-child {
        /*white-space: nowrap;*/
    }
    .stats_table span.zero {
        color:#ccc;
    }
    .stats_table a.detail_button { 
        font-size: 80%; 
        white-space: nowrap;
        background: #eee;
        padding: 0 2px;
        color: #999;
    }
    .stats_table a.detail_button:hover { background:#3B5998; color:#fff; text-decoration:none;  }
    
