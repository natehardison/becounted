    a.bc_button {
        background: url("<%= image_path('grey_button_r.gif') %>") left top;
        text-decoration: none;
        height: 29px; 
        float: left; 
		padding-left: 12px;
		margin: .5em .5em .5em 0;
    }
    
    a.bc_button span {
        display: block;
        background: url("<%= image_path('grey_button_r.gif') %>") right top no-repeat;
        font-size: 11px;
        color: #666;
        font-weight: bold; 
		padding: 7px 14px 9px 6px;
    }
    
    a:hover.bc_button {
        background: url("<%= image_path('grey_button_r.gif') %>") left -29px;
    }
    
    a:hover.bc_button span {
        background: url("<%= image_path('grey_button_r.gif') %>") right -29px;
        color: #fff;
    }
    
    a.bc_button_on {
        background: url("<%= image_path('grey_button_r.gif') %>") left 29px !important;
    }
    
    a.bc_button_on span {
        background: url("<%= image_path('grey_button.gif') %>") right 29px !important;
        color: #807C7C !important;
        cursor: default;
    }
	
    a.yellow {
        background: url("<%= image_path('yellow_button_r.gif') %>") left top;
    }
    
    a.yellow span {
        background: url("<%= image_path('yellow_button_r.gif') %>") right top;
        color: #444;
    }
    
    a:hover.yellow {
        background: url("<%= image_path('yellow_button_r.gif') %>") left -29px;
    }
    
    a:hover.yellow span {
        background: url("<%= image_path('yellow_button_r.gif') %>") right -29px;
        color: #000;
    }
    a.green {
        background: url("<%= image_path('green_button_r.gif') %>") left top;
    }
    
    a.green span {
        background: url("<%= image_path('green_button_r.gif') %>") right top;
        color: #fff;
    }
    
    a:hover.green {
        background: url("<%= image_path('green_button_r.gif') %>") left -29px;
    }
    
    a:hover.green span {
        background: url("<%= image_path('green_button_r.gif') %>") right -29px;
        color: #fff;
    }
    /* Small Grey Button!! */
    a.small {
        background: url("<%= image_path('small_grey_button_r.gif') %>") scroll left top;
        text-decoration:none;
		height:20px;
		float: left; 
		padding-left:9px;
		margin: .5em .5em .5em 0;
    }    
    a.small span {
        display: block;
        background: url("<%= image_path('small_grey_button_r.gif') %>") scroll right top;
        font-size:9px;
		color:#666;
		font-weight:bold;
		padding:3px 15px 4px 11px;
    }
    
    a:hover.small {
        background: url("<%= image_path('small_grey_button_r.gif') %>") scroll left -20px;
