    /* Header */
    #bc_header {
        width: 760px;
        height: 79px;
        background-image: url("<%= image_path('header.jpg') %>");
    }
    
    #bc_top_links {
        height: 30px;
        text-align: right;
        float: right;
        width: 160px;
    }
    
    #bc_top_links ul {
        list-style-type: none;
        margin: 0px;
        padding: 0px;
    }
    
    #bc_top_links li {
        float: left;
        margin: 0px;
        padding: 0px 10px;
        line-height: 30px;
        font-size: 1em;
    }
    
    #bc_top_links a {
        color: #fff;
        text-decoration: none;
    }
    
    #bc_top_links a:hover {
        color: #fff;
        text-decoration: underline;
    }
    
    #bc_main_links {
        float: left;
        margin: 7px 0px 0px 200px;
    }
    
    .bc_main_link {
        float: left;
    }
	
	#bc_walkthrough_step {
		font-size: 1em;
		float: left;
		margin: 30px 0px 0px 200px;
		color: #fff;
	}
    
    #bc_vote, #bc_recruit, #bc_friends {
        height: 38px;
    }
    
    #bc_vote a, #bc_recruit a, #bc_friends a {
        display: block;
        width: 100%;
        height: 100%;
        text-indent: -1000em;
        height: 38px;
        background: url("<%= image_path('main_links.png') %>");
    }
    
    #bc_vote a {
        width: 118px;
        background-position: 0 -38px;
    }
    
    #bc_vote a.on {
        background-position: 0 0 !important;
    }
    
    #bc_vote a:hover {
        background-position: 0 -76px;
    }
    
    #bc_recruit a {
        width: 150px;
        background-position: -118px -38px;
    }
    
    #bc_recruit a.on {
        background-position: -118px 0 !important;
    }
    
    #bc_recruit a:hover {
        background-position: -118px -76px;
    }
    
    #bc_friends a {
        width: 160px;
        background-position: -268px -38px;
    }
    
    #bc_friends a.on {
        background-position: -268px 0 !important;
    }
    
    #bc_friends a:hover {
        background-position: -268px -76px;
    }
	
    /* All Pages */
    #bc_container {
        width: 760px;
        font-family: "lucida grande", tahoma, verdana, arial, sans-serif;
    }
    
    #bc_container img {
        border: none;
    }
    
    .bc_clearfix {
        clear: both;
    }
	
	.bc_preload {
		width: 1px; 
		height: 1px; 
		margin-top: -1px; 
		overflow: hidden; 
	}
	
    .bc_hide {
    	width: 1px; 
		height: 1px; 
		background-color: white;
	}

	/* Profile page */
		
	#bc_profile {
		float:left;
		margin-top: 30px;
	}
	
	#bc_profile_left {
		float: left;
		width: 300px;
		margin: 0px 100px 0px 0px;
	}
	
	#bc_profile_right {
		float: right;
		width: 300px;
	}
	
